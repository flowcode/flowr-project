{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Project'}, 'Project') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerProjectBundle::appnav.html.twig", { 'app_project_list': true }) }}
{% endblock %}

{% block body %}
    <a href="{{ path('project_show',{id:project.id}) }}">
        <section class="content-header">
                <h1>{{ project.name|title }}</h1>
        </section>
    </a>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% members'|trans({'%entity%': 'Project'}, 'Project') }}</h3>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>{{ 'member'|trans ({}, 'Project') | title }}</th>
                            <th>{{ 'member role'|trans({}, 'Project')|title }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for membership in project.members %}
                    <tr>
                        <td>{{ membership.user }}</td>
                        <td>{{ membership.memberRole }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
    </section>
{% endblock %}
