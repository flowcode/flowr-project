{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Project'}, 'Project') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerProjectBundle::appnav.html.twig", { 'app_project_list': true }) }}
{% endblock %}

{% block body %}
    {{ include("FlowerProjectBundle:Project:header.html.twig", { 'project': projectMembership.project }) }}
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% edit'|trans({'%entity%': 'Member'}, 'Project') }}</h3>
                        <div class="box-tools pull-right">
                            {{ form_start(delete_form) }}
                            {{ form_widget(delete_form) }}
                            <button class="btn btn-link btn-xs"
                                    type="submit">{{ 'Delete'|trans({}, 'Project') }}</button>
                            <input name="modal" type="hidden" value="0">
                            {{ form_end(delete_form) }}
                        </div>
            </div>
            <div class="box-body">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-edit"></i> {{ 'Save'|trans({}, 'Project') }}
                    </button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>



                <div id="delete_confirm" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">&times;</button>
                                <h3>{{ 'Confirm delete'|trans({}, 'Project') }}</h3>
                            </div>
                            <div class="modal-body">
                                <p>{{ 'You are about to delete an item'|trans({}, 'Project') }}
                                    , {{ 'this procedure is irreversible'|trans({}, 'Project') }}.</p>
                                <p>{{ 'Do you want to proceed?'|trans({}, 'Project') }}</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Project') }}</button>
                                <button class="btn btn-default"
                                        data-dismiss="modal">{{ 'No'|trans({}, 'Project') }}</button>
                            </div>
                        </div>
                    </div>
                </div>

{% endblock %}
