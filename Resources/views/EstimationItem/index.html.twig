{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'EstimationItem'}, 'EstimationItem') }} - {{ parent() }}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>{{ 'EstimationItem' | trans({}, 'EstimationItem')}}</h1>
        <ol class="breadcrumb">
            <li><a href={{ path('dashboard') }}><i class="fa fa-dashboard"></i> {{"Dashboard" | trans({}, 'EstimationItem')}}</a></li>
            <li class="active" >{{ '%entity% list'|trans({'%entity%': 'EstimationItem'}, 'EstimationItem') }}</li>
        </ol>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% list'|trans({'%entity%': 'EstimationItem'}, 'EstimationItem') }}</h3>
                <div class="box-tools pull-right">                    <a class="btn btn-default" href={{ path('estimationitem_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'EstimationItem'}, 'EstimationItem') }}
                    </a>
                            </div>
            </div>
            <div class="box-body">    
            <table class="table table-striped table-hover table-bordered records_list">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Optimistic</th>
                        <th scope="col">Pesimistic</th>
                        <th scope="col">{{ 'Actions'|trans({}, 'EstimationItem') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for estimationitem in paginator %}
                        <tr>
                            <td><a href="{{ path('estimationitem_show', {id: estimationitem.id}) }}">{{ estimationitem.id }}</a></td>
                            <td>{{ estimationitem.name }}</td>
                            <td>{{ estimationitem.description }}</td>
                            <td>{{ estimationitem.optimistic }}</td>
                            <td>{{ estimationitem.pesimistic }}</td>
                            <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('estimationitem_show', {id: estimationitem.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'EstimationItem') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('estimationitem_edit', {id: estimationitem.id}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'EstimationItem') }}
                            </a>
                        </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            {{ knp_pagination_render(paginator) }}
            </div>
        <div class="box-footer">

        </div>
        
    </section>        

{% endblock %}
