{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Estimation'}, 'Estimation') }} - {{ parent() }}{% endblock %}

{% block body %} 
    <section class="content">
        {{ include("FlowerProjectBundle::appnav.html.twig", { 'app_estimation': true }) }} 
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-xs" type="submit"> {{ 'Delete'|trans({}, 'Estimation') }}</button>
                        <input name="modal" type="hidden" value="0">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
            <div class="box-body">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn btn-default" type="submit"> {{ 'Edit'|trans({}, 'Estimation') }}</button>
                </p>
            {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">


    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'Estimation') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'Estimation') }}, {{ 'this procedure is irreversible'|trans({}, 'Estimation') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'Estimation') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Estimation') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Estimation') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>
    </section>
{% endblock %}


