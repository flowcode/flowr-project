{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}DocPage - {{ parent() }}{% endblock %}
{% block app_menu %}
    {{ include("FlowerProjectBundle::appnav.html.twig", {'project' :project, 'app_doc':true}) }} 
{% endblock %}
{% block body %}
    <a href="{{ path('project_show',{id:project.id}) }}">
        <section class="content-header">
                <h1>{{ project.name|title }}</h1>
        </section>
    </a>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ docpage.title }}</h3>                            
                <div class="box-tools">
                    <a class="btn btn-default" href="{{ path('docpage_edit', {id: docpage.id}) }}">
                        <i class="fa fa-edit"></i> {{ 'edit'|trans }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                {{ docpage.content|raw }}
            </div>
            <div class="box-footer">

            </div>
        </div>

    </section>

{% endblock %}
