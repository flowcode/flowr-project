{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'DocPage'}, 'DocPage') }} - {{ parent() }}{% endblock %}
{% block app_menu %}
        {{ include("FlowerProjectBundle::appnav.html.twig", {'project' :project, 'app_doc':true}) }} 
{% endblock %}

{% block body %}
    <a href="{{ path('project_show',{id:project.id}) }}">
        <section class="content-header">
                <h1>{{ project.name|title }}</h1>
        </section>
    </a>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('docpage_create')}) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn btn-default" type="submit">{{ 'Create'|trans({}, 'DocPage') }}</button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">


                </div>

            </div>
        </div>
    </section>
{% endblock %}