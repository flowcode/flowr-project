{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'DocPage'}, 'DocPage') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'DocPage' | trans({}, 'DocPage')}}</h1>
        <ol class="breadcrumb">
            <li><a href={{ path('dashboard') }}><i class="fa fa-dashboard"></i> {{"Dashboard" | trans({}, 'DocPage')}}</a></li>
            <li><a href="{{ path('docpage') }}"> {{ '%entity% List'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</a></li>
            <li class="active" >{{ 'New %entity%'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</li>
        </ol>
    </section>        
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('docpage_create')}) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'DocPage') }}</button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">


                </div>

            </div>
        </div>
    </section>
{% endblock %}