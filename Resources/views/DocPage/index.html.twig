{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'DocPage'}, 'DocPage') }} - {{ parent() }}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>{{ 'DocPage' | trans({}, 'DocPage')}}</h1>
        <ol class="breadcrumb">
            <li><a href={{ path('dashboard') }}><i class="fa fa-dashboard"></i> {{"Dashboard" | trans({}, 'DocPage')}}</a></li>
            <li class="active" >{{ '%entity% list'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</li>
        </ol>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% list'|trans({'%entity%': 'DocPage'}, 'DocPage') }}</h3>
                <div class="box-tools pull-right">                    <a class="btn btn-default" href={{ path('docpage_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'DocPage'}, 'DocPage') }}
                    </a>
                            </div>
            </div>
            <div class="box-body">    
            <table class="table table-striped table-hover table-bordered records_list">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">{{ 'Actions'|trans({}, 'DocPage') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for docpage in paginator %}
                        <tr>
                            <td><a href="{{ path('docpage_show', {id: docpage.id}) }}">{{ docpage.id }}</a></td>
                            <td>{{ docpage.title }}</td>
                            <td>{{ docpage.content }}</td>
                            <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('docpage_show', {id: docpage.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'DocPage') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('docpage_edit', {id: docpage.id}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'DocPage') }}
                            </a>
                        </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            {{ knp_pagination_render(paginator) }}
            </div>
        <div class="box-footer">

        </div>
        
    </section>        

{% endblock %}
